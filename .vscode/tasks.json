{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build -> C64 -> VICE",
            "type": "shell",
            "osx": { "command": "./make.sh -d64 -f fairlight" },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": {
                "owner": "acme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(Error - File\\s+(.*), line (\\d+) (\\(Zone .*\\))?:\\s+(.*))$",
                    "file": 2,
                    "location": 3,
                    "message": 1
                }
            }
        },
        {
            "label": "build -> C64 -> VICE with exomizer",
            "type": "shell",
            "osx": { "command": "./make.sh -c" },
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": {
                "owner": "acme",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^(Error - File\\s+(.*), line (\\d+) (\\(Zone .*\\))?:\\s+(.*))$",
                    "file": 2,
                    "location": 3,
                    "message": 1
                }
            }
        },        
    ]
}